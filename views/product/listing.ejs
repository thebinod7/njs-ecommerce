<!-- START MAIN CONTAIN -->
<div class="main-contain">
    <div class="container">
        <div class="row">
            <aside>
                <div class="col-md-3 col-sm-12 col-xs-12 sidebar pull-right">
                    <!-- CATEGORIES WIDGET -->
                    <div class="widget mb30">
                        <h6 class="text-uppercase bottom-line">Categories</h6>
                        <ul class="icons-list">
                          <%
                            cats.forEach(function(c,a){
                          %>
                            <li><a href="/category/<%= c._id %>"><%= c.categoryName %> <span class="pull-right">view</span></a></li>
                          <% }); %>
                        </ul>
                    </div>
                    <!-- END CATEGORIES WIDGET -->

                    <!-- SIDE-BAR PRODUCT WIDGET -->
                    <div class="">
                        <div class="widget mb30">
                            <h6 class="text-uppercase bottom-line">Top Rated</h6>
                        </div>
                        <div class="small-thumb-proudct mb30">
                            <div class="thumb-product">
                                <img class="thumb-product-img img-responsive" src="/img/products/pro1.jpg" alt="">
                                <div class="thumb-product-inner">
                                    <h6><a href="/product/details">Printed Su..</a></h6>
                                    <span class="thumb-product-cat">Fashion</span>
                                </div>
                                <ul class="list-inline overflow-h">
                                    <li class="thumb-product-price line-through">$60.00</li>
                                    <li class="thumb-product-price">$30.00</li>
                                </ul>
                            </div>
                        </div>
                        <div class="small-thumb-proudct mb30">
                            <div class="thumb-product">
                                <img class="thumb-product-img img-responsive" src="/img/products/pro2.jpg" alt="">
                                <div class="thumb-product-inner">
                                    <h6><a href="/product/details">Printed Su..</a></h6>
                                    <span class="thumb-product-cat">Fashion</span>
                                </div>
                                <ul class="list-inline overflow-h">
                                    <li class="thumb-product-price">$65.00</li>
                                </ul>
                            </div>
                        </div>
                        <div class="small-thumb-proudct mb30">
                            <div class="thumb-product">
                                <img class="thumb-product-img img-responsive" src="/img/products/pro3.jpg" alt="">
                                <div class="thumb-product-inner">
                                    <h6><a href="/product/details">Printed Su..</a></h6>
                                    <span class="thumb-product-cat">Fashion</span>
                                </div>
                                <ul class="list-inline overflow-h">
                                    <li class="thumb-product-price line-through">$75.00</li>
                                    <li class="thumb-product-price">$65.00</li>
                                </ul>
                            </div>
                        </div>
                        <div class="small-thumb-proudct mb30">
                            <div class="thumb-product">
                                <img class="thumb-product-img img-responsive" src="/img/products/pro3.jpg" alt="">
                                <div class="thumb-product-inner">
                                    <h6><a href="/product/details">Printed Su..</a></h6>
                                    <span class="thumb-product-cat">Fashion</span>
                                </div>
                                <ul class="list-inline overflow-h">
                                    <li class="thumb-product-price line-through">$75.00</li>
                                    <li class="thumb-product-price">$65.00</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- END SIDE-BAR PRODUCT WIDGET -->
                </div>
            </aside>

            <div class="col-md-9 col-sm-12 col-xs-12">
                <div class="row  hidden-xs">
                    <div class="toolbar">
                        <div class="col-sm-4 category-num">
                            <h2>Found</h2>
                            <small class="category-num-coun"><%= count %> Items</small>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <ul class="view-mode">
                            <li class="grid-list-icons">
                                <a href="shop-list-left.html"><i class="fa fa-th-list"></i></a>
                                <a href="shop-grid-left.html"><i class="fa fa-th"></i></a>
                            </li>
                            <li class="sort-list-btn">
                                <h6>Sort By :</h6>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                        Popularity <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">All</a></li>
                                        <li><a href="#">Price Lowest</a></li>
                                        <li><a href="#">Price Highest</a></li>
                                        <li><a href="#">New Arrived</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="sort-list-btn">
                                <h6>Show :</h6>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                        20 <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">All</a></li>
                                        <li><a href="#">10</a></li>
                                        <li><a href="#">5</a></li>
                                        <li><a href="#">3</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="category-products col-grid-style">
                    <div class="row clearfix">
                      <div class="row clearfix">
                        <%
                          products.forEach(function(p,a) {
                        %>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="products grid-product mb30">
                            <div class="product-grid-inner">
                              <div class="product-grid-img">
                                <ul class="product-labels">
                                  <li>Sale</li>
                                </ul>
                                <a href="/product/view/<%= p._id %>" class="product-grid-img-thumbnail">
                                  <img src="<%= p.featuredImg ? '/assets/img/uploads/' + p.featuredImg : '/img/placeholder.png' %>" alt="img" class="img-responsive primary-img" />
                                  <img src="<%= p.images ? '/assets/img/uploads/' + p.images[1] : '/img/placeholder.png' %>" alt="img" class="img-responsive socendary-img" />
                                </a>
                              </div>

                              <div class="product-grid-caption text-center">
                                <h6><a class="p-grid-title" href="/product/details"><%= p.title %></a></h6>
                                <p><%= p.productDesc %></p>
                                <span class="price clearfix"> Nrs. <span class="special-price"><%= p.price %></span></span>
                                <a class="btn btn-product cd-cart-btn" href="#"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% }); %>
                      </div>
                    </div>
                  </div>

            </div>
        </div>


  <!-- Start Pagination-->
    <div class="cd-pagination">
    <ul class="pagination">
    <li><a href="#"><i class="fa fa-angle-left" aria-hidden="true"></i></a></li>
    <li  class="active"><a href="#">1</a></li>
