<!DOCTYPE html>
<html>
  <% include ../partials/head %>

  <body>
  <div class="wrapper">
    <% include ../partials/header %>

    <div class="container dashboard">
      <div class="row profile">
        <div class="col-md-4">
          <div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src="/img/user/binod.jpg" class="img-responsive" alt="">
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<%= user.firstName %> <%= user.lastName %>
					</div>
					<div class="profile-usertitle-job">
						<a href="tel:<%= user.phone %>"><%= user.phone %></a>
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR BUTTONS -->
				<div class="profile-userbuttons">
					<a href="mailto:<%= user.email %>" class="btn btn-success btn-sm"><%= user.email %></a>
				</div>
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="nav">
						<li>
							<a href="/users/dashboard">
							<i class="glyphicon glyphicon-dashboard"></i>
							Dashboard </a>
						</li>
						<li>
							<a href="/category/add">
							<i class="glyphicon glyphicon-plus"></i>
							Add Category </a>
						</li>
						<li>
							<a href="/product/add">
							<i class="glyphicon glyphicon-gift"></i>
							Add Products </a>
						</li>
            <li>
							<a href="/product/my-listings">
							<i class="glyphicon glyphicon-list"></i>
							My Products </a>
						</li>
            <li>
							<a href="/product/orders">
							<i class="glyphicon glyphicon-list-alt"></i>
							Product Orders </a>
						</li>
            <li>
							<a href="/users/account">
							<i class="glyphicon glyphicon-cog"></i>
							Account Settings </a>
						</li>
            <li>
              <a href="/users/logout">
              <i class="glyphicon glyphicon-log-out"></i>
              Logout </a>
            </li>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
        </div>
        <div class="col-md-8">
          <div class="profile-content">
            <%- body %>
           </div>
        </div>
      </div>
    </div>

    <!-- JQUERY LIBS -->
    <script type="text/javascript"  src="/js/jquery.min.js"></script>
    <!-- BOOTSTRAP -->
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <!-- FLEXSLIDER -->
    <script type="text/javascript" src="/plugins/FlexSlider/jquery.flexslider-min.js"></script>
    <!-- MAGNIFIC POPUP-->
    <script type="text/javascript" src="/js/jquery.magnific-popup.min.js"></script>
    <!-- MAGNIFIC POPUP  -->
    <script type="text/javascript" src="/js/magnific-popup.min.js"></script>
    <!-- slick-->
    <script type="text/javascript" src="/js/slick.js"></script>
    <!-- slick-slider-->
    <script type="text/javascript" src="/js/slick-slider.js"></script>
    <!-- plugins-->
    <script type="text/javascript" src="/js/plugins.min.html"></script>
    <!-- CUSTOM-->
    <script type="text/javascript" src="/js/custom.js"></script>

    <!--[if lt IE 9]>
    <script src="respond.js"></script>
    <script src="html5shiv.js"></script>
    <![endif]-->
    <%- script %>
  </div>
  </body>
</html>
